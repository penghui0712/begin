.contianer {
  width: 100%;
  height: auto;
  #banner-swiper {
    display: inline-block;
    margin-top: 40px;
    width: 100%;
    height: auto;
    .banner-img {
      width: 100%;
      height: auto;
    }
  }
  .classification-view{
    width: 100%;
    height: 1450px;
    background: #ebebeb;
    .classification-info{
      width: 1200px;
      height: auto;
      margin: 0 auto;
      .classification-img{
        display: inline-block;
        width: 221px;
        height: 21px;
        margin: 90px auto 0 489.5px;
      }
      .heart-img{
        width: 241px;
        height: 15px;
        margin: 27px auto auto auto;
        display: block;
      }
      .wine-list{
        margin-top: 44px;
        font-size: 0;
        text-align: center;
        .wine-item{
          width: 302px;
          height: 333px;
          display: inline-block;
          overflow: hidden;
          .wine-filter{
            background: url("../img/filter-bg.png") no-repeat;
            width: 285px;
            height: 316px;
            position: absolute;
            margin-left: 9px;
            margin-top: 6px;
            -webkit-transition: opacity 0.3s linear;
            -moz-transition: opacity 0.3s linear;
            -o-transition: opacity 0.3s linear;
            transition: opacity 0.3s linear;
            opacity:0;
            filter:alpha(opacity=0);
            text-align: center;
          }
          .wine-img{
            width: 302px;
            height: 333px;
          }
          .wine-tips{
            color:#fff;
            font-size: 17px;
            width: 240px;
            margin: 25px auto auto auto;
            line-height: 24px;
            font-family: PingFang_Bold;
          }
          .wine-bot-img{
            width: 44px;
            height: 44px;
            margin-top: 55px;
            display: inline-block;
            cursor: pointer;
          }
        }
        .wine-item:hover{
          .wine-filter{
            opacity:100;
            filter:alpha(opacity=100);
          }
        }
      }
      .wine-list-tips{
        font-size: 0;
        text-align: center;
        .wine-tips{
          font-family: PingFang_Bold;
          margin-top: 10px;
          width: 302px;
          color:#0EB493;
          font-size: 19px;
          display: inline-block;
          vertical-align: middle;
        }
      }
      .hdsource-img{
        width: 158px;
        height: 21px;
        margin: 120px auto auto auto;
        display: block;
      }

      .hdsource-control{
        font-size: 0;
        text-align: center;
        margin: 50px auto auto auto;
        a{
          font-family: PingFang_Bold;
          display: inline-block;
          vertical-align: middle;
          font-size: 15px;
          padding: 7.5px 15px;
          color: #062033;
          border-radius: 5px;
          cursor: pointer;
        }
        a:hover{
          color: #0EB493;
        }
        .active{
          color: #ffffff;
          background: #0EB493;
        }
        .active:hover{
          color: #ffffff;
        }
      }
      .food-info{
        width: 100%;
        margin-top: 50px;
        font-size: 0;
        img{
          width: 300px;
          height: 223px;
        }
      }

    }
  }


}